page{
  background:#F0EFF5;
}
.body{
  width: 100%;
  padding: 0 30rpx 20rpx;
  display:flex;
  flex-direction:column-reverse;
}
.noticelist{
  width:100%;
  display:flex;
  align-items:center;
  flex-direction:column;
}
.time{
  width:240rpx;
  height:50rpx;
  background:#ddd;
  font-size:22rpx;
  color:white;
  display:flex;
  justify-content:center;
  align-items:center;
  border-radius: 7rpx;
  margin:20rpx 0;
}
.container{
  width:100%;
  background:white;
  border:1px solid #ddd;
  border-radius:10rpx;
  padding:20rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}
.isShow{
  margin-left:599rpx;
  position:absolute;
  margin-top:-18rpx;
  color:red;
  font-size:24rpx
}
.title{
  color:#666;
  font-size:30rpx;
}
.description{
  color:#999;
  font-size:25rpx;
  margin:15rpx 0;
}
.img{
  width: 100%;
  height: 240rpx;
}