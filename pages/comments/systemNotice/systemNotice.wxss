/* pages/comments/systemNotice/systemNotice.wxss */
.body{
  width: 100%;
  min-height: 100%;
  background:#F0EFF5;
  padding: 0 30rpx 20rpx;
}
.noticelist{
  width:100%;
  height:500rpx;
  display:flex;
  align-items:center;
  flex-direction:column;
}
.time{
  width:220rpx;
  height:50rpx;
  background:#ddd;
  font-size:22rpx;
  color:white;
  display:flex;
  justify-content:center;
  align-items:center;
  border-radius: 7rpx;
  margin:20rpx 0;
}
.container{
  width:100%;
  height:410rpx;
  background:white;
  border:1px solid #ddd;
  border-radius:10rpx;
  padding:20rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}
.title{
  color:#666;
  font-size:30rpx;
}
.description{
  color:#999;
  font-size:25rpx;
}
.img{
  width: 100%;
  height: 240rpx;
}