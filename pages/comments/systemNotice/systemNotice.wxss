/* pages/comments/systemNotice/systemNotice.wxss */
page{
  background:#F0EFF5;
}
.body{
  width: 100%;
  padding: 0 20rpx 20rpx;
  display:flex;
  flex-direction:column-reverse;
}
.noticelist{
  width:100%;
  display:flex;
  align-items:center;
  flex-direction:column;
  margin-top: 15rpx;
}
.time{
  color:#ddd;
  font-size:22rpx;
  display:flex;
  justify-content:flex-end;
  align-items:center;
}
.container{
  width:100%;
  background:white;
  border:1px solid #ddd;
  border-radius:10rpx;
  padding:20rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  position:relative;
}
.isShow{
  position:absolute;
  top: 0;
  right: 8rpx;
  color:red;
  font-size:24rpx
}
.title{
  color:#666;
  font-size:30rpx;
}
.description{
  color:#999;
  font-size:25rpx;
  margin:15rpx 0;
}
.img{
  width: 100%;
  height: 240rpx;
}