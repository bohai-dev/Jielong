/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.slideImage{
  width: 100%;
  height: 100%;
}
.listContent{
  border-top: 1px solid gainsboro;
  padding: 30rpx 20rpx;
  background-color: #fff;
  font-family: "微软雅黑",-apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.listContent>view{
  margin:0 0 10rpx 10rpx;  
}
.listHead{
  display: flex;
  align-items: center;
}
.conHeadImg{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
}
.conHeadTitle{
  font-size: 32rpx;
  color: green;
  margin-left:10rpx;
}
.descText{
  font-size: 34rpx;
}
.conTime{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: grey;
}
.conTime text{
  padding:0 20rpx;
}
.conTime text:nth-of-type(1){
  padding-left: 0;
}
.conTime text:nth-of-type(2){
  width: 1rpx;
  height: 26rpx;
  padding: 0;
  background-color: grey;
  border-right: 1rpx solid grey;
}
.conImgDetail{
  height: 210rpx;
  width:210rpx;
  margin-right: 20rpx;
}
.conAddr{
  display: flex;
  align-items: center;
}
.conAddrText{
  font-size: 26rpx;
  color: grey;
}

.loadCon{
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.loadGif{
  width: 60rpx;
  height:60rpx;
}
.loadCon text{
  font-size: 30rpx;
}
.allLine{
  width: 28%;
  border-top: 1rpx solid gainsboro;
}
.allText{
  padding: 0 24rpx;
  color: grey;
}