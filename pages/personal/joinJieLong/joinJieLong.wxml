<!--pages/personal/joinJieLong/joinJieLong.wxml-->
<view class="JLPage" wx:if="{{isShow}}">
  <view class='content' wx:for="{{data}}"  wx:key="id" wx:for-index="index" wx:for-item="item" data-id="{{item.id}}" bindtap='navToDetail'>
    <view class='midCont'>
      <view class='left' >
         参与时间：<text>{{item.createdAt}}</text>
      </view>
      <view class='right'>
        <text class='{{item.state == 0 ? "blue" : item.state == 1 ? "green" : "red"}}'>{{item.state == 0 ? "活动结束" : item.state == 1 ? "正在进行中" : "平台终止"}}</text>
      </view>
    </view>
    <view class='midCont'>
      <view class='left'>
         <text>{{item.topic}}</text>
      </view>
      <view class='right'>
      </view>
    </view>
  </view>
</view>



<view class='body' wx:if="{{!isShow}}">
  <view class='no-record'>
    <image class='recordimg' src='../../../images/norecord.png'></image>
    <text class='news'>你还没有参与过任何接龙活动</text>
  </view>
  <navigator url='./joinMessage/joinMessage'>toMessage</navigator>
</view>
