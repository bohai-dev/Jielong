/* pages/release/release.wxss */
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.body{
 background-color: #CCCCCC;  /*灰色背景*/ 
 font-size:  30rpx;
 flex: 1;
 overflow: auto;
}
.containerView{
  background-color: #FFFFFF;   /*白色*/
  margin-top: 3rpx;
  padding-left: 2%;
  padding-right: 2%;
  padding-top:4%;
  padding-bottom: 4%;   
}
.rowIconView{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.input{
  width: 75%;
  padding-left: 3rpx;
}
.introImage{
  height: 100rpx;
  width: 100rpx;
}
.icon{
  width: 30rpx;
  height: 40rpx;
}
.goodsMark{
  width: 10rpx;
  height: 30rpx;
  background-color: #1afa29;   /*绿色*/
}
.imageIntroView{
display: flex;
flex-direction: row;
flex-wrap: wrap;  
height: auto;
}
.uploadView{
  height: 100rpx;
  width: 100rpx;
  border-radius:  10px;
  background-color: #CCCCCC;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:center;
  align-items: center;
}

.goodsListView{
  display: flex;
  flex-direction: column;
}

.addGood{
  display: flex;
  justify-content: center;

}

.publishView{
 height: 60rpx;
}