/* pages/release/release.wxss */
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.body{
 background-color: #eee;  /*灰色背景*/ 
 font-size:  30rpx;
 flex: 1;
 overflow: auto;
}
.containerView{
  background-color: #FFFFFF;   /*白色*/
  margin-top: 3rpx;
  padding-left: 2%;
  padding-right: 2%;
  padding-top:4%;
  padding-bottom: 4%;
  font-size:30rpx;
}
.phcolor{
  color: #ddd;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}
.rowIconView{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.input{
  width: 75%;
  padding-left: 3rpx;
}
.introImage{
  height: 100rpx;
  width: 100rpx;
}
.center{
  display:flex;
  align-items:center;
  justify-content:center;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  margin-right:10rpx;
}
.goodsMark{
  width: 10rpx;
  height: 40rpx;
  background-color: #1afa29;   /*绿色*/
}
.imageIntroView{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;  
  height: auto;
}
.uploadView{
  height: 100rpx;
  width: 100rpx;
  border-radius:  10rpx;
  background-color: #ddd;
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content:center;
  align-items: center;
  color:#666;
}

.goodsListView{
  display: flex;
  flex-direction: column;
}

.addGood{
  display: flex;
  justify-content: center;

}

.publishView{
 height: 60rpx;
}